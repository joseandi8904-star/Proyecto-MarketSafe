<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ContextMenu?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="581.0" prefWidth="687.0"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controladores.controlador_catalogo">

   <center>
      <AnchorPane id="AnchorPane"
                  prefHeight="449.0" prefWidth="577.0"
                  style="-fx-background-color: FAF7F3;">
         <children>

            <Label layoutX="39.0" layoutY="21.0" />

            <HBox layoutX="70.0" layoutY="27.0" spacing="30.0">
               <children>
                  <Label text="Compras" textFill="FORESTGREEN">
                     <font><Font size="15.0" /></font>
                  </Label>
                  <Label text=">">
                     <font><Font size="15.0" /></font>
                  </Label>
                  <Label text="Catalogo" textFill="FORESTGREEN">
                     <font><Font size="15.0" /></font>
                  </Label>
               </children>
            </HBox>

            <ScrollPane fitToWidth="true"
                        layoutX="39.0" layoutY="67.0"
                        prefHeight="315.0" prefWidth="655.0"
                        style="-fx-border-color: transparent;">
               <content>
                  <FlowPane fx:id="contCatalogo"
                            hgap="20.0" vgap="20.0"
                            prefWidth="651.0">
                     <padding>
                        <Insets bottom="10.0" left="20.0" right="10.0" top="10.0" />
                     </padding>
                  </FlowPane>
               </content>
            </ScrollPane>

            <ComboBox fx:id="filtro"
                      layoutX="544.0" layoutY="25.0"
                      prefWidth="150.0"
                      onAction="#cambio"
                      style="-fx-background-color: transparent;" />

            <ComboBox fx:id="filtro2"
                      layoutX="375.0" layoutY="25.0"
                      prefWidth="150.0"
                      onAction="#cambio2"
                      style="-fx-background-color: transparent;" />

         </children>
      </AnchorPane>
   </center>

   <bottom>
      <Pane prefHeight="58.0"
            style="-fx-background-color: #ffb3b3;"
            BorderPane.alignment="CENTER" />
   </bottom>

   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>

            <AnchorPane prefHeight="96.0">

               <children>

                  <Button layoutX="-7.0" layoutY="3.0"
                          onAction="#inicio"
                          style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="72.0" fitWidth="153.0">
                           <image>
                              <Image url="@../Imagenes/Iconos/icono.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>

                  <Button layoutX="642.0" layoutY="22.0"
                          onAction="#abrir"
                          style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="25.0" fitWidth="27.0">
                           <image>
                              <Image url="@../Imagenes/Iconos/corazon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>

                  <Button fx:id="Options"
                          layoutX="465.0" layoutY="20.0"
                          onAction="#mostraropciones"
                          style="-fx-background-color: transparent;
                                 -fx-background-radius: 25;
                                 -fx-border-color: #c40000;
                                 -fx-border-radius: 25;"
                          text="   Usuario">

                     <graphic>
                        <ImageView fitHeight="26.0" fitWidth="27.0">
                           <image><Image url="@../Imagenes/Iconos/usuario.png" /></image>
                        </ImageView>
                     </graphic>

                     <contextMenu>
                        <ContextMenu fx:id="H">
                           <items>
                              <MenuItem text="Historial" onAction="#abrirhistorial" />
                              <MenuItem text="Agregar producto" onAction="#crearproducto" />
                              <MenuItem text="Cerrar sesion" onAction="#salir" />
                           </items>
                        </ContextMenu>
                     </contextMenu>

                  </Button>

                  <Button layoutX="593.0" layoutY="19.0"
                          onAction="#abrircarrito"
                          style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="30.0" fitWidth="40.0">
                           <image><Image url="@../Imagenes/Iconos/carrito.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>

                  <!-- BARRA SUPERIOR CAMBIADA A ROJO -->
                  <Rectangle arcHeight="5.0" arcWidth="5.0"
                             fill="#ff4a4a" stroke="#ff4a4a"
                             layoutX="-16.0" layoutY="68.0"
                             width="747.0" height="28.0" />

               </children>
            </AnchorPane>

            <VBox layoutX="222.0" layoutY="-3.0">

               <children>
                  <StackPane prefHeight="87.0">

                     <children>

                        <TextField fx:id="busqueda"
                                   promptText="Buscar productos"
                                   style="-fx-background-color: #fdf9f7;
                                          -fx-border-color: #c40000;
                                          -fx-border-width: 1.5;
                                          -fx-border-radius: 25;
                                          -fx-background-radius: 25;
                                          -fx-padding: 5;" />

                        <Button style="-fx-background-color: transparent;"
                                StackPane.alignment="CENTER_RIGHT">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0">
                                 <image><Image url="@../Imagenes/Iconos/lupa.png" /></image>
                              </ImageView>
                           </graphic>
                        </Button>

                     </children>

                  </StackPane>

                  <ScrollPane fx:id="contenedor"
                              fitToHeight="true" fitToWidth="true"
                              visible="false">
                     <content>
                        <VBox fx:id="resultados" onKeyReleased="#buscarcatalogo" />
                     </content>
                  </ScrollPane>

               </children>

            </VBox>

            <Button layoutX="673.0" layoutY="14.0"
                    style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="41.0" fitWidth="45.0">
                     <image><Image url="@../Imagenes/Iconos/catalogo.png" /></image>
                  </ImageView>
               </graphic>
            </Button>

         </children>
      </AnchorPane>
   </top>

</BorderPane>
