<BorderPane prefHeight="581.0" prefWidth="687.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controladores.controlador_usuario">
   <center>
      <AnchorPane id="AnchorPane" prefHeight="449.0" prefWidth="577.0">
         <children>
            <AnchorPane layoutY="-2.0" prefHeight="429.0" prefWidth="718.0" style="-fx-background-color: #ffdddd;">
               <children>

                  <!-- CONTENEDOR DE CATALOGO CON BORDE ROJO -->
                  <HBox fx:id="usercatalogo" layoutX="53.0" layoutY="268.0"
                        prefHeight="150.0" prefWidth="621.0"
                        spacing="20.0"
                        style="-fx-border-color: #c40000; -fx-background-radius: 25; -fx-border-radius: 25;">
                     <padding>
                        <Insets bottom="5.0" left="20.0" top="5.0" />
                     </padding>
                  </HBox>

                  <Button fx:id="atras" layoutY="325.0" mnemonicParsing="false" onAction="#retroceder"
                          style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="37.0" fitWidth="40.0" preserveRatio="true">
                           <image><Image url="@../Imagenes/Iconos/flechaizq.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>

                  <Button fx:id="adelante" layoutX="675.0" layoutY="325.0"
                          mnemonicParsing="false" onAction="#avanzar"
                          style="-fx-background-color: transparent;">
                     <graphic>
                        <ImageView fitHeight="38.0" fitWidth="40.0" preserveRatio="true">
                           <image><Image url="@../Imagenes/Iconos/flechader.png" /></image>
                        </ImageView>
                     </graphic>
                  </Button>

                  <ImageView fitHeight="220.0" fitWidth="668.0" layoutX="28.0" layoutY="25.0" preserveRatio="true">
                     <image><Image url="@../Imagenes/Publicidad/banner.png" /></image>
                  </ImageView>

               </children>
            </AnchorPane>
         </children>
      </AnchorPane>
   </center>

   <bottom>
      <Pane prefHeight="58.0" prefWidth="643.0"
            style="-fx-background-color: #ffdddd;"
            BorderPane.alignment="CENTER" />
   </bottom>

   <top>
      <AnchorPane BorderPane.alignment="CENTER">
         <children>

            <ImageView fitHeight="72.0" fitWidth="153.0" layoutY="7.0" preserveRatio="true">
               <image><Image url="@../Imagenes/Iconos/icono.png" /></image>
            </ImageView>

            <Button fx:id="fav" layoutX="642.0" layoutY="22.0"
                    onAction="#abrir" style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="25.0" fitWidth="27.0" preserveRatio="true">
                     <image><Image url="@../Imagenes/Iconos/corazon.png" /></image>
                  </ImageView>
               </graphic>
            </Button>

            <!-- BOTÃ“N USUARIO CON BORDE ROJO -->
            <Button fx:id="Options" layoutX="465.0" layoutY="20.0"
                    onAction="#mostraropciones"
                    prefHeight="15.0" prefWidth="119.0"
                    style="-fx-background-color: transparent; -fx-background-radius: 25; -fx-border-color: #c40000; -fx-border-radius: 25;"
                    text="   Usuario">
               <graphic>
                  <ImageView fitHeight="26.0" fitWidth="27.0" preserveRatio="true">
                     <image><Image url="@../Imagenes/Iconos/usuario.png" /></image>
                  </ImageView>
               </graphic>

               <contextMenu>
                  <ContextMenu fx:id="H">
                    <items>
                      <MenuItem fx:id="h" text="Historial" onAction="#abrirhistorial" />
                      <MenuItem fx:id="add" text="Agregar producto" onAction="#crearproducto" />
                      <MenuItem fx:id="out" text="Cerrar sesion" onAction="#salir" />
                    </items>
                  </ContextMenu>
               </contextMenu>
            </Button>

            <Button fx:id="carrito" layoutX="593.0" layoutY="19.0"
                    onAction="#abrircarrito"
                    style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="30.0" fitWidth="40.0" preserveRatio="true">
                     <image><Image url="@../Imagenes/Iconos/carrito.png" /></image>
                  </ImageView>
               </graphic>
            </Button>

            <!-- BARRA ROJA SUPERIOR -->
            <Rectangle arcHeight="5.0" arcWidth="5.0"
                       fill="#ff4a4a" stroke="#ff4a4a"
                       height="28.0" layoutX="-16.0" layoutY="68.0"
                       width="747.0" />

            <VBox layoutX="222.0" layoutY="-3.0" prefHeight="95.0" prefWidth="213.0">
               <children>

                  <!-- BUSCADOR CON BORDE ROJO -->
                  <StackPane prefHeight="87.0" prefWidth="213.0">
                     <children>
                        <TextField fx:id="busqueda"
                                   prefHeight="25.0" prefWidth="233.0"
                                   promptText="Buscar productos"
                                   style="-fx-background-color: #fff4f4; -fx-border-color: #c40000; -fx-border-width: 1.5; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 5;" />

                        <Button style="-fx-background-color: transparent;" StackPane.alignment="CENTER_RIGHT">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" preserveRatio="true">
                                 <image><Image url="@../Imagenes/Iconos/lupa.png" /></image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </StackPane>

                  <ScrollPane fx:id="contenedor" fitToHeight="true" fitToWidth="true"
                              prefHeight="300.0" prefWidth="215.0" visible="false">
                     <content>
                        <VBox fx:id="resultados" onKeyReleased="#buscarcatalogo"
                              prefHeight="200.0" prefWidth="212.0" />
                     </content>
                  </ScrollPane>

               </children>
            </VBox>

            <Button layoutX="673.0" layoutY="14.0"
                    onAction="#catalogo"
                    style="-fx-background-color: transparent;">
               <graphic>
                  <ImageView fitHeight="41.0" fitWidth="45.0" preserveRatio="true">
                     <image><Image url="@../Imagenes/Iconos/catalogo.png" /></image>
                  </ImageView>
               </graphic>
            </Button>

         </children>
      </AnchorPane>
   </top>
</BorderPane>
